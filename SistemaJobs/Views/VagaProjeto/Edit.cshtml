@model SistemaJobs.ViewModel.VagaProjetoViewModel
@{
    ViewBag.Title = "Edit";
}

<link href="~/Content/css/select2.min.css" rel="stylesheet" />
<script>
    $(document).ready(function () {
        $(".select2").select2({
            tags: true,
            multiple: true,
            tokenSeparators: [',', ' ']
        });
    });
</script>
<script src="~/Scripts/select2.min.js"></script>

<h2 style="margin-top:50px; color: #385898;">Editar Vaga de emprego</h2>
<hr class="hr-custom" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.VagaProjetoViewModelId)

    <div class="form-horizontal">
        <div class="row">
            <div class="form-group col-md-12">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label lbl-custom" })*
                </div>
                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.Titulo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Titulo)
                </div>
            </div>

            <div class="form-group col-md-12">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label lbl-custom" })*
                </div>
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control", @cols = 40, @rows = 5, @style = "max-width: 100%" })
                    @Html.ValidationMessageFor(model => model.Descricao)
                </div>
            </div>

            <div class="form-group col-md-12">
                <div class="col-md-6" style="padding:0px">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.NomeCompetencia, "Competências", htmlAttributes: new { @class = "control-label lbl-custom" })*
                    </div>
                    <div class="col-md-12">
                        @Html.ListBoxFor(m => m.ListaCompetencias, Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", @style = "width:100%;" })
                        @Html.ValidationMessageFor(model => model.NomeCompetencia)
                    </div>
                </div>

                <div class="col-md-6" style="padding:0px">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.NomeCargo, "Cargos", htmlAttributes: new { @class = "control-label lbl-custom" })*
                    </div>
                    <div class="col-md-12">
                        @Html.ListBoxFor(m => m.ListaCargos, Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", @style = "width:100%;" })
                        @Html.ValidationMessageFor(model => model.NomeCargo)
                    </div>
                </div>
            </div>

            <div class="form-group col-md-12">
                <div class="col-md-2" style="padding:0px">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label lbl-custom" })*
                    </div>
                    <div class="col-md-12">
                        @Html.DropDownList("Estado", new SelectList(ViewBag.Estado, "Value", "Text"), "Select", htmlAttributes: new { @class = "form-control", @style = "width:auto;" })
                        @Html.ValidationMessageFor(model => model.Estado)
                    </div>
                </div>

                <div class="col-md-4" style="padding:0px">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Cidade, htmlAttributes: new { @class = "control-label lbl-custom" })*
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Cidade, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Cidade)
                    </div>
                </div>

                <div class="col-md-3" style="padding:0px">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.RegimeContratacao, htmlAttributes: new { @class = "control-label lbl-custom" })
                    </div>
                    <div class="col-md-12">
                        @Html.DropDownList("RegimeContratacao", new SelectList(ViewBag.RegimeContratacao, "Value", "Text"), "Select", htmlAttributes: new { @class = "form-control", @style = "width:auto;" })
                        @Html.ValidationMessageFor(model => model.RegimeContratacao)
                    </div>
                </div>

                <div class="col-md-3" style="padding:0px">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.SalarioOrcamento, "Salário", htmlAttributes: new { @class = "control-label lbl-custom" })*
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.SalarioOrcamento, new { @class = "form-control", type = "number", @style = "width:120px;" })
                        @Html.ValidationMessageFor(model => model.SalarioOrcamento)
                    </div>
                </div>
            </div>

            <div class="form-group col-md-12">
                <div class="col-md-2" style="padding:0px">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.QtdVagas, htmlAttributes: new { @class = "control-label lbl-custom" })*
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.QtdVagas, new { @class = "form-control", @style = "width:90px;", type = "number" })
                        @Html.ValidationMessageFor(model => model.QtdVagas)
                        <h5 style="color:#b94a48; line-height: 1.428571429;">@ViewBag.Quantidade</h5>
                    </div>
                </div>

                <div class="col-md-4" style="padding:0px">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.DataFinal, htmlAttributes: new { @class = "control-label lbl-custom" })*
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.DataFinal, new { @class = "form-control", type = "date", @style = "width:auto;" })
                        @Html.ValidationMessageFor(model => model.DataFinal)
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-12" style=" margin-top:30px; text-align: end;">
                    <div class="col-md-12">
                        @Html.ActionLink("Voltar", "Index")
                        <input type="submit" value="Editar" class="btn-custom" style="margin-left: 10px;" />
                    </div>
                </div>
            </div>
        </div>

    </div>
}
