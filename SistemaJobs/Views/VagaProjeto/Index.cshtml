@using PagedList.Mvc;
@model PagedList.IPagedList<SistemaJobs.ViewModel.VagaProjetoViewModel>

@{
    ViewBag.Title = "Index";
}

@if (Session["tipoUsuario"].ToString() == "funcionario")
{
    <h2 style="text-align:center;color:#385898;margin-top:80px;">Vagas de Emprego e Projetos</h2>
}
else
{
    <h2 style="margin-top:70px; color: #385898;">Vagas de Emprego</h2><span>@Html.ActionLink("Cadastrar Vaga de Emprego", "Create", "VagaProjeto", new { tipoVagaParam = "0" }, new { tipoVagaParam = "0" })</span>
}
<hr class="hr-custom" />

@using (Html.BeginForm("Index", "VagaProjeto", FormMethod.Get))
{
    if (Session["tipoUsuario"].ToString() == "funcionario")
    {
        <p style="text-align:center;margin-bottom:50px;">
            @Html.TextBox("SearchString", null, new { @class = "control-label lbl-custom" })
            <input class="control-label lbl-custom" type="submit" value="Pesquisar" />
        </p>
    }
}

@foreach (var p in Model)
{
    @Html.Partial("_CardVagasEmprego", p)
}


<!-- Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount-->
<div style="text-align:center">

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }))
</div>