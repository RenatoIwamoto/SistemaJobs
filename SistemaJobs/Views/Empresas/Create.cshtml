@model SistemaJobs.Empresa
@{
    ViewBag.Title = "Create";

    Layout = "~/Views/Shared/_LayoutInicial.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6" style="background-color: rgba(255, 255, 255, 0.8); padding:45px;padding-top:95px;">
        <div style="text-align:center">
            <img src="/Images/logo-hiredit.png" style="margin: 0px 0px 15px;" />
        </div>
        @*<h2 style="margin-top:0;margin-left:25px;margin-bottom:20px;">Cadastre-se</h2>*@

        @using (Html.BeginForm("Create", "Empresas", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.Label("Nome*", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Nome)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("CNPJ*", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.CNPJ, new { @class = "form-control", mask = "99.999.999/9999-99" })
                    @Html.ValidationMessageFor(model => model.CNPJ)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Telefone*", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Telefone, new { @class = "form-control", mask = "(99) 99999-9999" })
                    @Html.ValidationMessageFor(model => model.Telefone)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Email*", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Estado*", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.Estado, new SelectList(ViewBag.Estado, "Value", "Text"), "Select", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Estado)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Cidade*", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Cidade, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Cidade)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Usuario*", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Usuario)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Senha*", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Senha)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cadastrar" class="btn btn-default" />
                </div>
            </div>

            <div class="col-md-3">
                @Html.ActionLink("Voltar", "Index", "Home")
            </div>
        }
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquerymask")
    @Scripts.Render("~/scripts/CustomValidationCNPJ.js")
}
