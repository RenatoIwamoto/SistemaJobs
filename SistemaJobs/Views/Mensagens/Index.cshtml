@model IEnumerable<SistemaJobs.Mensagem>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-top:70px !important; color: #385898;">Mensagens</h2>
<hr class="hr-custom" />

<div class="row">
    <div class="col-md-3 part-chat">
        <div class="row">
            <div class="desc-chat">
                <div class="col-md-4">
                    <img src="~/Images/@(ViewBag.ImagemRemetente)" style="border-radius:0;max-width:100%;max-height:100%;" />
                </div>
                <div class="col-md-8">
                    <p>@ViewBag.NomeRemetente</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="desc-chat">
                <div class="col-md-4">
                    <img src="~/Images/@(ViewBag.ImagemDestinatario)" style="border-radius:0;max-width:100%;max-height:100%;" />
                </div>
                <div class="col-md-8">
                    <p>@ViewBag.NomeDestinatario</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-9">

        @foreach (var item in Model)
        {
            var classe = "";

            if (item.TipoUsuario == Session["tipoUsuario"].ToString())
            {
                classe = "left-top";
            }
            else
            {
                classe = "right-top pull-right talk-bubble-dest right-top-dest";
            }

            <div class="row">
                <div class="talk-bubble tri-right border round @classe">
                    <div class="talktext">
                        <p>@item.Mensagem1</p>
                        <hr class="hr-custom" style="margin: 10px 0 10px 0;" />
                        <small class="pull-right">@item.Data</small>
                    </div>
                </div>
            </div>
        }

        <div class="row">
            @{Html.RenderAction("Create", "Mensagens");}
        </div>
    </div>
</div>

